<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="customerMapper">
    <select id="findOne" parameterType="Integer" resultType="chapter6.model.Customer">
        SELECT * FROM customer WHERE id=#{id}
    </select>
    <select id="findAll" resultType="chapter6.model.Customer">
        SELECT * FROM customer
    </select>
    <insert id="save" parameterType="chapter6.model.Customer">
        INSERT INTO customer
        VALUES (#{id}, #{name}, #{jobs}, #{phone})
    </insert>
    <update id="update" parameterType="chapter6.model.Customer">
        UPDATE customer
        SET name=#{name}, jobs=#{jobs}, phone=#{phone}
        WHERE id=#{id}
    </update>
    <delete id="delete" parameterType="Integer">
        DELETE FROM customer WHERE id=#{id}
    </delete>
</mapper>