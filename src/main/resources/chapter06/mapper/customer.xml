<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="customerMapper">
    <select id="findOne" parameterType="Integer" resultType="chapter06.model.Customer">
        SELECT * FROM customer WHERE id=#{id}
    </select>
    <select id="findAll" resultType="chapter06.model.Customer">
        SELECT * FROM customer
    </select>
    <select id="findByColumn" resultType="chapter06.model.Customer">
        SELECT * FROM customer WHERE ${column} = #{value}
    </select>
    <select id="findByName" resultType="chapter06.model.Customer">
        SELECT * FROM customer WHERE name LIKE CONCAT('%','${value}','%')
    </select>
    <insert id="save" parameterType="chapter06.model.Customer">
        INSERT INTO customer
        VALUES (#{id}, #{name}, #{jobs}, #{phone})
    </insert>
    <update id="update" parameterType="chapter06.model.Customer">
        UPDATE customer
        SET name=#{name}, jobs=#{jobs}, phone=#{phone}
        WHERE id=#{id}
    </update>
    <delete id="delete" parameterType="Integer">
        DELETE FROM customer WHERE id=#{id}
    </delete>
</mapper>